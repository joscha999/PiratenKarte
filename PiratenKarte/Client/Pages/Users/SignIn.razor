@page "/signin"
@layout CenterFormLayout

<div class="card mb-3" style="min-width: 400px;">
    <div class="card-body">
        <h5 class="card-title mb-3">Login</h5>
        <div class="mb-3">
            <label class="form-label">Benutzername</label>
            <input type="text" class="form-control" @bind=Username @onkeypress=OnKeyPressed @bind:event="oninput" />
        </div>
        <div class="mb-3">
            <label class="form-label">Passwort</label>
            <div class="input-group">
                <input type="@(ShowPassword ? "text" : "password")" class="form-control"
                       @bind=Password @onkeypress=OnKeyPressed @bind:event="oninput" />
                <button class="btn btn-primary" type="button" @onclick=ToggleShowPassword>
                    <i class="bi @(ShowPassword ? "bi-eye-slash-fill" : "bi-eye-fill")"></i>
                </button>
            </div>
            <FormError ErrorBag=ErrorBag Key="UsernamePassword" />
            <FormError ErrorBag=ErrorBag Key="ServerError" />
        </div>
        <div style="display: flex; justify-content: space-between; flex-direction: row; align-items: center;">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" @bind=KeepLoggedIn />
                <label class="form-check-label">Eingeloggt bleiben</label>
            </div>

            <button class="btn btn-primary" @onclick=Login disabled="@Submitting">Einloggen</button>
        </div>
    </div>
</div>